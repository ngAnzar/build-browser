doctype html

html
  head
    block base-href
      base(href="/")

    title= title

    block meta
      meta(charset="utf-8")
      meta(name="viewport" content="width=device-width, initial-scale=1")

    block css
    for file in css
      link(rel="stylesheet" type="text/css" href=file.path media=file.media)
  body
    block body

    block js
    for file in js
      script(src=`${file.path}` type="text/javascript" async=true)
